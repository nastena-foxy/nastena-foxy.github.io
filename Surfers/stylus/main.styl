

body {
    width: 100%
    font-family: 'Montserrat', sans-serif;
    background-color: rgba(30, 144, 255, 0.5)
}
/* Social Icons */
.social-icons {
    background-color: #000
    padding: 5px
    padding-right: 20px
}
.social-icons img {
    padding-left: 10px
}

.social-icons a {
    text-decoration: none
}

/* Navigation */
.navbar-brand  {
    font-size: 24px !important
    padding-left: 10px
}

 a {
    color: black !important
}


a:hover {
    color: #fff !important
}

a:active {
    background-color: #00b0ff
    color: #fff 
}


.nav-item.active {
    background-color: #00b0ff
}

.navbar-nav {
    padding-right: 10px 
}


.navbar {
    width: 100%
}

@media(max-width: 767px) {
    .nav-item a, .navbar-brand {
        font-weight:600
        color: #fff !important
    }
    .navbar {
        background-color: #4169e1 !important
        background-size: cover
    }
}

li a {
    font-size: 16px
}

/* Slogan */

.slogan-1,
.slogan-2 {
    font-family: 'Playfair Display', serif;
    font-style: italic
}

.slogan-1 {
    font-size: 50px
    color: #000
}

.slogan-2 {
    font-size: 24px
    color: #fff
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.64)
}
/*     Boards       */
.boards {
    width: 100%
    height: auto;
    background: white;
    border: 1px solid lightgray;
    box-shadow: 0px 5px 5px 2px rgba(0,0,0,.34)
}

svg{
    width: 100%;
    height: 600px;
    display: block;
    margin 0
    padding 0
}

/*=======article=======*/

.content {
  color: #968e8e
}

.item a {
    color: grey !important
}

.item a:hover {
    color: black !important
}

.item a:active {
    color: black !important
}

@media(max-width: 767px) {
    .item a {
        color: grey !important
    }
    .item a:hover {
        color: black !important
    }

    .item a:active {
    color: black !important
}

}

/* Carusel */
.carusel {
    margin: 0
}

@media (max-width: 767px) {
    .carusel {
        margin: 0
        padding-top: 20px
    }
}

/* Brands */

.brands {
    background-color: #fff
}


/*Footer*/

.footer {
    background-color: #141313
    padding: 10px
    display:flex;
    color: #fff
    line-height: 30px
    font-size: 12px
    font-weight: 400
    justify-content:space-between;
    min-height:40px;
    text-transform:uppercase;
}

.footer-copiright, .footer-contacts, .footer-design {
    min-height: 40px
}

.footer-copyright {
  text-align:left;
  padding-left: 10px
  margin-left: 0
}

.footer-design {
  text-align:right;
  padding-right:10px
  margin-right:0
}

@media (max-width: 767px) {
  .footer-copyright {
    text-align: center !important;
  }
  
  .footer-contacts {
    text-align: center !important;
  }
  .footer-design {
    text-align: center !important;
  }
}

@media(max-width: 767px) {
    .card-1, .card-2 {
    padding-bottom: 10px
    text-align: center !important;
}

/* Cards */
.card-1 {
    padding-top: 20px
}
.card-3 {
    padding-bottom: 20px
    text-align: center !important;
  }
}

.card-title {
    position: relative;
}

.card-title span {
    position: absolute;
    left: 10px;
    bottom: 50%;
    width: 100%
    box-sizing:border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    box-sizing: border-box; 


    color:#fff;
    font-size: 26px
    font-weight: 600
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.64)
         
    padding-top:10px;
    padding-right:0
    padding-left:0
    padding-bottom: 0

}

.cards {
    padding: 15px 5px 5px 5px
    margin: 0

}