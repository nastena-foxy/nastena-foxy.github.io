
body {
    font-family: 'Montserrat', sans-serif;
    background: url('../img/bg-surfers.jpg') no-repeat
    background-size: cover
}

#logo {
    font-size: 24px
}

 a {
    color: black !important
}

.nav-item.active a {
    color: #fff !important
    background-color: #00b0ff
}

a:hover {
    color: #fff !important
}

 .nav-item a:active, #logo:active {
    color: #fff
    background-color: #00b0ff
}

.navigation-menu {
    padding-left: 130px !important
}

@media(max-width: 1199px) {
    .navigation-menu{
     padding-left: 0 !important
    }
}

.navbar {
    width: 100%
}

@media(max-width: 767px) {
    .navbar {
        background-color: #1A4780
    }

    .nav-item a, #logo {
        font-weight:600
        color: #fff !important
    }

}

.slogan-1,
.slogan-2 {
    font-family: 'Playfair Display', serif;
    font-style: italic
}

.slogan-1 {
    font-size: 50px
    color: #000
}

.slogan-2 {
    font-size: 24px
    color: #fff
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.64)
}
/*     Boards       */
.boards {
    width: 95%
    max-height: 650px
    margin: 2em;
    background: white;
    border: 1px solid lightgray;
    box-shadow: 0px 5px 5px 2px rgba(0,0,0,.34)
}

svg{
    width: 50%;
    height: 650px;
    display: block;
    margin 0
    padding 0
}