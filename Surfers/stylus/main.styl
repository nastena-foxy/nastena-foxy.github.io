
body {
    margin 0
    padding 0
    font-family: 'Montserrat', sans-serif;
    background: url('../img/bg-surfers.jpg') no-repeat
    background-size: cover
}



.social-icons {
    background-color: #000
    padding: 5px
    padding-right: 20px
}
.social-icons img {
    padding-left: 10px
}

.social-icons a {
    text-decoration: none
}

#logo {
    font-size: 24px
}

 a {
    color: black !important
}


a:hover {
    color: #fff !important
}

a:active {
    background-color: #00b0ff
    color: #fff 
}


.nav-item.active {
    background-color: #00b0ff
}

.navigation-menu {
    padding-left: 130px !important
}

@media(max-width: 1199px) {
    .navigation-menu {
     padding-left: 0 !important
    }
}

.navbar {
    width: 100%
}

@media(max-width: 767px) {
    .nav-item a, #logo {
        font-weight:600
        color: #fff !important
    }
    .navbar {
        background-color: #4169e1 !important
        background-size: cover
    }
}

.slogan-1,
.slogan-2 {
    font-family: 'Playfair Display', serif;
    font-style: italic
}

.slogan-1 {
    font-size: 50px
    color: #000
}

.slogan-2 {
    font-size: 24px
    color: #fff
    text-shadow: 2px 2px 8px rgba(0, 0, 0, 0.64)
}
/*     Boards       */
.boards {
    width: 100%
    height: auto;
    background: white;
    border: 1px solid lightgray;
    box-shadow: 0px 5px 5px 2px rgba(0,0,0,.34)
}

svg{
    width: 100%;
    height: 600px;
    display: block;
    margin 0
    padding 0
}

/*=======article=======*/

.content {
  color: #968e8e
}

.item a {
    color: grey !important
}

.item a:hover {
    color: black !important
}

.item a:active {
    color: black !important
}

@media(max-width: 767px) {
    .item a {
        color: grey !important
    }
    .item a:hover {
        color: black !important
    }

    .item a:active {
    color: black !important
}
}
